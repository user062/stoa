<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/material-icons.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">        
</head>
<body>

{{> navbar userId=user}}        
{{> module_sidebar folders=folders moduleId=moduleId is_teacher=is_teacher}}
    
    <div class="content">        
        <div class="container">
        <div class="main-body p-0 col-11 mx-auto">
            <div class="inner-wrapper">    
                <!-- Inner main -->
                <div class="inner-main">
                    <div class="container">                                                
                        <h5 style="font-weight: 800">{{folderName}}</h5>                             
                    </div>
                    
                    <!-- Forum List -->
                    <div class="posts">
                        {{#unless folderPosts}}
                        <div class="alert alert-primary" role="alert">
                            Rien n'a été ajouté
                        </div>
                        {{/unless}}
                      {{> post_partial posts=folderPosts moduleName=moduleName user=user}}
                    </div>
                </div>
        </div>
        </div>
    </div>    

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script> 
    <script src="/js/poll_script.js"></script> 
    <script src="/js/up_down_vote.js"></script> 
</body>
</html>
