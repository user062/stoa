    <div class="sidebar">
        <ul class="links">
            <li>                                
                <a class="sidebar__link active" id="home" href="/">
                    <span class="material-icons">home</span>
                    Home
                </a>                
            </li>                        
            <hr style="background-color: #f6f6f6;height: 1px;width: 75%;margin: 1rem auto">
            </li>              
            {{#each folders as |folder|}}
            <li class="module__link">                                                
                <div class="module__folders">                         
                    <a class="module__folder" href="/modules/{{../moduleId}}/folders/{{folder.id}}">
                        <span class="material-icons">folder_open</span>           
                        {{folder.name}}
                    </a>          
                </div>                     
            </li>            
            {{/each}}
        </ul>
    </div>
